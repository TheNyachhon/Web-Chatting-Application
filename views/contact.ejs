                                <div class="user-profile-info">
                                    <label>Email</label>
                                    <p>hamrochat@gmail.com</p>
                                </div>
                                <div class="user-profile-info">
                                    <label>Contact Number</label>
                                    <p>9108871103</p>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
